{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"declaration": true,
		"sourceMap": true,
		"strictNullChecks": true,
		"forceConsistentCasingInFileNames": true,
		"noUnusedParameters": true,
		"noUnusedLocals": true
	},
	"exclude": [
		"demo-application",
		"node_modules"
	],
	"compileOnSave": true
}
